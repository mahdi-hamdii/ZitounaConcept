{% extends 'base.html.twig' %}

{% block title %}Hello FirstPageController!{% endblock %}
{% block nav %}
    {% for categorie in categories %}
        <li id="nav-item" class="nav-item">
            <a class="nav-link active" href="{{ path('second_page', {'id': categorie.id} ) }}"
            >{{ categorie.nom}} <span class="sr-only">(current)</span></a
            >
        </li>
    {% endfor %}
{% endblock %}
{% block body %}
    <section class="carousel">
        <div
                id="carouselExampleIndicators"
                class="carousel slide"
                data-ride="carousel"
        >
            <ol class="carousel-indicators">
                <li
                        data-target="#carouselExampleIndicators"
                        data-slide-to="0"
                        class="active"
                ></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img
                            class="d-block w-100 carr-pic"
                            src="{{ asset('assets/Front/img/carousel/pic1.jpg') }}"
                            alt="First slide"
                    />
                </div>
                <div class="carousel-item">
                    <img
                            class="d-block w-100 carr-pic"
                            src="{{ asset('assets/Front/img/carousel/pic2.jpg') }}"
                            alt="Second slide"
                    />
                </div>
                <div class="carousel-item">
                    <img
                            class="d-block w-100 carr-pic"
                            src="{{ asset('assets/front/img/carousel/pic3.jpg') }}"
                            alt="Third slide"
                    />
                </div>
            </div>
            <a
                    class="carousel-control-prev"
                    href="#carouselExampleIndicators"
                    role="button"
                    data-slide="prev"
            >
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a
                    class="carousel-control-next"
                    href="#carouselExampleIndicators"
                    role="button"
                    data-slide="next"
            >
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <section class="produits">
        <div class="container">
            <h2 class="title">Nos Produits</h2>
            <!-- Mobilier de bureau -->
            {% for categorie in categories %}
            <div class="row main-row">
                <div class="main-pic">
                    <div class="main-pic-wrapper">
                        <a href="{{ path('second_page', {'id': categorie.id } ) }}"
                        ><img src="/assets/upload/{{ categorie.image }}" alt=""
                            /></a>
                        <a href="#" class="details">
                            <p>Voir plus <i class="fas fa-angle-double-right"></i></p>
                        </a>
                    </div>
                </div>

                <div class="main-text">
                    <a href="{{ path('second_page', {'id': categorie.id} ) }}">{{ categorie.nom }}</a>
                        <p class="desc">
                       {{ categorie.description }}
                    </p>
                </div>
            </div>
            {% endfor %}
    </section>

    <section class="projets">
        <div class="container">
            <h2 class="title">Nos Projets</h2>
            <div class="row">
                <a class="box-a" href="./mobilierBureau/bureauDirection.html">
                    <div class="pic-wrapper">
                        <img
                                src="../img/mobilierBureau/nouveautes/mobBurNew4.jpg"
                                alt=""
                        />
                        <p class="details">
                            Voir plus <i class="fas fa-angle-double-right"></i>
                        </p>
                    </div>
                    <div>
                        <p class="name" style="padding-bottom: 1rem;">Projet 1</p>
                    </div>
                </a>
                <a class="box-a" href="./mobilierBureau/bureauDirection.html">
                    <div class="pic-wrapper">
                        <img
                                src="../img/mobilierBureau/nouveautes/mobBurNew1.jpg"
                                alt=""
                        />
                        <p class="details">
                            Voir plus <i class="fas fa-angle-double-right"></i>
                        </p>
                    </div>
                    <div>
                        <p class="name" style="padding-bottom: 1rem;">Projet 2</p>
                    </div>
                </a>
                <a class="box-a" href="./mobilierBureau/bureauDirection.html">
                    <div class="pic-wrapper">
                        <img
                                src="../img/mobilierBureau/nouveautes/mobBurNew2.jpg"
                                alt=""
                        />
                        <p class="details">
                            Voir plus <i class="fas fa-angle-double-right"></i>
                        </p>
                    </div>
                    <div>
                        <p class="name" style="padding-bottom: 1rem;">Projet 3</p>
                    </div>
                </a>
                <a class="box-a" href="./mobilierBureau/bureauDirection.html">
                    <div class="pic-wrapper">
                        <img
                                src="../img/mobilierBureau/nouveautes/mobBurNew3.jpg"
                                alt=""
                        />
                        <p class="details">
                            Voir plus <i class="fas fa-angle-double-right"></i>
                        </p>
                    </div>
                    <div>
                        <p class="name" style="padding-bottom: 1rem;">Projet 4</p>
                    </div>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
