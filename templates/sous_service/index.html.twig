{% extends 'base.html.twig' %}

{% block nav %}
    {% for categorie in categories %}
        <li id="nav-item" class="nav-item">
            <a class="nav-link active" href="{{ path('second_page', {'id': categorie.id} ) }}"
            >{{ categorie.nom}} <span class="sr-only">(current)</span></a
            >
        </li>
    {% endfor %}
{% endblock %}
{% block body %}
    <main>
        <div class="container categorie-container">
            <div class="row">
                <h2 class="title">{{ service.nom }}</h2>
                <br/>
                {% if service.description != null %}
                <p class="categorie-container-desc">
                    {{ service.description }}
                </p>
                {% endif %}
            </div>
            <div class="row categorie-row">
                {% for sousService in sousServices %}
                    <a class="box-b">
                        <div class="box-b-wrapper">
                            <img
                                    src="/assets/upload/{{ sousService.image }}"
                                    alt=""
                            />
                        </div>
                        <div>
                            <p class="name">{{ sousService.nom }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
